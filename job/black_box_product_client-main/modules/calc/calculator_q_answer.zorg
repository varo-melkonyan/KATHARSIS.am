<div id="q_answer_container_^{q_id}_^{id}" class="every_answer_container">
    <div class="nav_arrows_quest">
        <button                 class="q_answer_up"             onclick="calc_handlers.onReplaceAnswers('up'    , ^{q_id}, ^{id})">▲</button> 
        <button                 class="q_answer_down"           onclick="calc_handlers.onReplaceAnswers('down'  , ^{q_id}, ^{id})">▼</button> 
    </div>
    <input type="text"          class="q_answer_input"          id="question_^{q_id}_ans_^{id}"     value="^{answer_value}"/>
    <p class="points_label" >Points :</p>
    <input type="number"        class="q_answer_points_input"   id="points_^{q_id}_^{id}"           value="^{point_value}"/>
    <button                     class="q_answer_remove"         id="remove_ans_^{q_id}_^{id}"       onclick="calc_handlers.onRemoveAnswer(^{q_id},^{id})">+</button> 
</div>